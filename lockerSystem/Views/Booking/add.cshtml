    $("#BuildingId").on("change", function () {
        showValue($(this).val());
    });

    function showValue(val) {
        $.getJSON('@Url.Action("getFloorByBuildingId", "Booking")/' + val, function (result) {
            console.log(result);
            $("#FloorId").html(""); // makes select null before filling process
            for (var i = 0; i < result.length; i++) {
                $("#FloorId").append("<option value='" + result[i].id + "'>" + result[i].no + "</option>")
            }
        });
    }
</script>
