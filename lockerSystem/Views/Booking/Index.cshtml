@model IEnumerable<BookingViewsModels>;

@* 
<div class="block mb-4">
    
   <div class="card"> *@
<div class="block mb-4">
    <div class="block-header border-bottom px-4 py-3">
        <h5 class="m-0">المستخدمين</h5>
        <div class="d-flex gap-2">
            <div class="form-group">
                <input type="text" class="form-control table__quick_search"
                       placeholder="البحث السريع ...">
            </div>
            <a asp-action="add" class="btn btn-primary">حجز خزانة</a>
        </div>
    </div> 

 
    
    <div class="card-body">
        <div class="row">
           <h5>عرض معلومات الحجز</h5>

            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-hover table-striped table-bordered" id="myTable">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(m => m.fullName)</th>
                                <th> @Html.DisplayNameFor(m => m.email)</th>
                                <th> @Html.DisplayNameFor(m => m.phone)</th>
                                <th>  @Html.DisplayNameFor(m => m.BookingState.NameAr) </th>

                                <th>@Html.DisplayNameFor(m => m.Locker.Floor.no) </th>
                                <th>@Html.DisplayNameFor(m => m.Locker.no)</th>
                                <th>@Html.DisplayNameFor(m => m.colegename)  </th>
                                <th></th>


                           </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model)
                                {
                                    <tr>
                                        @* <td>@item. bokingDateTime</td>*@
                                        <td>@item.fullName</td>
                                        <td>@item.email</td>
                                        <td>@item.phone</td>
                                        <td>@item.BookingState.NameAr</td>
                                        <td>@item.Locker.Floor.no</td>
                                        <td>@item.Locker.no</td>
                                        <td>@item.colegename</td>
                                        <td>
                                            <a asp-action="edit" asp-route-id="@item.Guid" class="btn btn-sm btn-success"> تعديل</a>

                                        </td>


                                    </tr>
     


                                }
                                            <a asp-controller="Home" asp-action="Index"  class="btn btn-sm btn-success"> الصفحة الرئيسية</a>

                            }

                        </tbody>
                    </table>
                       
                
                       
                </div>

            </div>

        </div>
    </div                


</div>
