@model IEnumerable<lockerSystem.ViewsModels.BuildingViewsModels> ;

<div class="block mb-4">
    <div class="block-header border-bottom px-4 py-3">
        <h5 class="m-0">المباني</h5>
        <div class="d-flex gap-2">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <form class="d-md-inline-flex" asp-action="Index" asp-controller="Building">
                            <div class="col-md-6">
                                <input type="search" name="seaechString" class="form-control table__quick_search"
                                   placeholder="البحث السريع ...">
                            </div>
                            <div class="col-md-8">
                                <button class="btn btn-primary" type="submit">بحث بواسطة الرمز</button>
                            </div>
                        </form>
                    </div>

                    <div class="col-md-4">
                        <a asp-action="Index" class="btn btn-primary">الرجوع الى القائمة</a>
                    </div>
                </div>
            </div>

            <a asp-action="add" class="btn btn-primary">إضافة مبنى</a>

        </div>
    </div>
    <div class="block-body">
        <table class="table table-hover js-dataTable">
            <thead>
                <tr>
                    <th> @Html.DisplayNameFor(m => m.code)</th>
                    <th> @Html.DisplayNameFor(m => m.NameAr)</th>
                    <th> @Html.DisplayNameFor(m => m.NameEn)</th>
                    <th> @Html.DisplayNameFor(m => m.no)</th>
                    <th> @Html.DisplayNameFor(m => m.gender)</th>
                    <th class=""></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    <tr class="cursor-pointer">
                        <td>@x.code</td>
                        <td>@x.NameAr</td>
                        <td>@x.NameEn</td>
                        <td>@x.no</td>
                        <td>@x.gender</td>
                        
                        <td class="action_td text-end">
                            <a asp-action="Edit" asp-route-id="@x.Guid" class="btn btn-sm btn-success">تعديل</a>
                            <a asp-action="Delete" asp-route-id="@x.Guid" class="btn btn-sm btn-danger">حذف</a>
                        </td>
                    </tr>

                }

            </tbody>
        </table>
        <script>
            $(document).ready(function () {
                $(".navbar-toggler").click(function () {
                    if ($(".side-menu").hasClass("collapsed") == true) {
                        $(".side-menu").removeClass("collapsed");
                    } else {
                        $(".side-menu").addClass("collapsed");
                    }
                });
                $(".collapse_option").click(function () {
                    $(this).toggleClass("active");
                })
                $('#myTable').DataTable();
            });
        </script>
    </div>
</div>