@model IEnumerable<BookingViewsModels>
<div class="block mb-4">

    <div class="block-header border-bottom px-4 py-3">

        <h5 class="m-0">الطوابق</h5>
        <div class="d-flex gap-2">
            <div class="form-group">
                <form class="d-md-inline-flex" asp-action="Index" asp-controller="Order">
                    <div class="col-md-6">
                        <input type="search" name="seaechString" class="form-control table__quick_search"
                               placeholder="البحث السريع ...">
                    </div>
                    <div class="col-md-8">
                        <button class="btn btn-primary" type="submit">البحث  برقم الطابق </button>
                    </div>
                </form>

            </div>
            <div class="col-md-4">
                <a asp-action="Index" class="btn btn-primary">العودة الى القائمة </a>
            </div>
            <a asp-action="add" class="btn btn-primary">اضافة </a>
        </div>
    </div>
@{
    if (Model != null)
    {
        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-4">
                <h5 class="m-0">الحجوزات</h5>
            </div>
            <div class="block-body py-5">
                <div class="row justify-content-center">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped table-bordered" id="myTable">
                                <thead>
                                    <tr>
                                        <th> @Html.DisplayNameFor(m => m.fullName)</th>

                                        <th> @Html.DisplayNameFor(m => m.BookingState.NameAr)</th>

                                        <th> @Html.DisplayNameFor(m => m.bokingDateTime)</th>





                                        <th></th>


                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.fullName</td>

                                                <td>@item.BookingState.NameAr</td>
                                               
                                                <td>@item.bokingDateTime</td>

                                                <td>
                                                    <a asp-action="details" asp-route-id="@item.Guid" class="btn btn-success btn-sm">عرض التفاصيل</a>

                                                </td>


                                            </tr>


                                        }

                                    }
                                </tbody>
                            </table>



                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}


