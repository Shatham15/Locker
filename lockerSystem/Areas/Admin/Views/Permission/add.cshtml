<script>
        $("#btnSerach").on("click", function () {
            var UserName = $("#UserNamecheck").val();
            showValue(UserName);
    });

    function showValue(val) {
        $("#FullName").val("");
        $("#Phone").val("");
        $("#UserName").val("");
        $.getJSON('@Url.Action("getUserInfo", "Permission")/' + val, function (result) {
             console.log(result);
            if (result == null) {
                $("#UserNameCheck").toggle(true);
            }
            else {
                $("#UserNameCheck").toggle(false);
                $("#FullName").val(result.fullName);
                $("#Phone").val(result.phone);
                $("#UserName").val(result.email);
            }
        });
    }
</script>

